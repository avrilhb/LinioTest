<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_collection"
        android:layout_width="174dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/header"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/collection_one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/collection_two"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/collection_one" />

            <ImageView
                android:id="@+id/collection_three"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_below="@+id/collection_two"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/collection_one" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/collection_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_collection"
        android:layout_marginLeft="18dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/collection_name"
        android:textColor="@color/title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/collection_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collection_name_tv"
        android:layout_marginLeft="18dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/collection_count"
        android:textColor="@color/pinkish_grey"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>